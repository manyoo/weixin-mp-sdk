name:                weixin-mp-sdk
version:             0.13
-- synopsis:            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Gilbert Fine
maintainer:          gilbert.fine@gmail.com
-- copyright:           
category:            WeiXin
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10


Flag library-only
    Description:   Build for library only
    Default:       False

Flag prof
    Description:   Turn on profiling settings
    Default:       False

Flag parsec3
    Description:   Use parsec3
    Default:       False

Flag network-uri
    Description: Get Network.URI from the network-uri package
    Default: True

library
  exposed-modules:     WeiXin.PublicPlatform.Error
                       WeiXin.PublicPlatform.Types
                       WeiXin.PublicPlatform.Class
                       WeiXin.PublicPlatform.WS
                       WeiXin.PublicPlatform.Acid
                       WeiXin.PublicPlatform.Security
                       WeiXin.PublicPlatform.Media
                       WeiXin.PublicPlatform.Material
                       WeiXin.PublicPlatform.AutoReplyRules
                       WeiXin.PublicPlatform.Message
                       WeiXin.PublicPlatform.InMsgHandler
                       WeiXin.PublicPlatform.Menu
                       WeiXin.PublicPlatform.CS
                       WeiXin.PublicPlatform.QRCode
                       WeiXin.PublicPlatform.EndUser
                       WeiXin.PublicPlatform.Propagate
                       WeiXin.PublicPlatform.Yesod.Site
                       WeiXin.PublicPlatform.Yesod.Types
                       WeiXin.PublicPlatform.Yesod.Model
                       WeiXin.PublicPlatform.Yesod.Site.Function
                       WeiXin.PublicPlatform.Yesod.Site.Data
                       WeiXin.PublicPlatform.BgWork
                       WeiXin.PublicPlatform.Utils
                       WeiXin.PublicPlatform.Misc
                       WeiXin.PublicPlatform.Conversation
                       WeiXin.PublicPlatform.Conversation.Misc
                       WeiXin.PublicPlatform.Conversation.Message
                       WeiXin.PublicPlatform.Conversation.Yesod
                       WeiXin.PublicPlatform.Conversation.TextParser
                       WeiXin.PublicPlatform.Center
                       WeiXin.PublicPlatform.OAuth
                       WeiXin.PublicPlatform.JS
                       WeiXin.PublicPlatform

  -- other-modules:       
  default-extensions:  NoImplicitPrelude
                       DeriveDataTypeable
                       OverloadedStrings
                       QuasiQuotes
                       TemplateHaskell
                       TypeFamilies
                       FlexibleInstances
                       FlexibleContexts
                       MultiParamTypeClasses
                       ExistentialQuantification
                       ConstraintKinds
                       TupleSections
                       RankNTypes


  build-depends:       base >=4.7
                     , template-haskell
                     , classy-prelude
                     , classy-prelude-yesod
                     , yesod
                     , persistent >= 2.0 && < 2.3
                     , yesod-core
                     , yesod-form
                     , shakespeare
                     , yesod-helpers >= 0.10.1
                     , text
                     , aeson
                     , bytestring
                     , cryptohash
                     , base64-bytestring
                     , base16-bytestring
                     , wreq
                     , mime-types
                     , lens
                     , exceptions
                     , http-client
                     , monad-logger
                     , safecopy
                     , acid-state
                     , data-default
                     , mtl
                     , async
                     , time
                     , cryptocipher
                     , cipher-aes
                     , byteable
                     , random
                     , attoparsec
                     , transformers >= 0.4
                     -- , transformers-compat
                     , xml-conduit
                     , xml-hamlet
                     , wai
                     , conduit
                     , conduit-extra
                     , conduit-combinators
                     , scientific
                     , yaml >= 0.8.11
                     , filepath
                     , cryptohash
                     , containers
                     , resourcet
                     , regex-tdfa
                     , unordered-containers
                     , fsnotify >= 0.2
                     , directory
                     , monad-control
                     , http-types
                     , blaze-builder
                     , network
                     , StateVar
                     , haskell-qrencode
                     , byteable
                     , semigroups
                     , JuicyPixels
                     , array
                     , th-lift
                     , case-insensitive
                     , HTTP
                     , vector
                     , cereal

  if flag(parsec3)
      build-depends:   parsec3
  else
      build-depends:   parsec == 3.*

  if flag(network-uri)
     build-depends: network-uri >= 2.6, network >= 2.6
  else
     build-depends: network-uri < 2.6, network < 2.6

  -- hs-source-dirs:      
  default-language:    Haskell2010

  ghc-options:         -Wall


executable wxpp-manage
  if flag(library-only)
      Buildable: False

  main-is:             manage.hs
  hs-source-dirs:      tools

  build-depends:       base
                     , weixin-mp-sdk
                     , classy-prelude
                     , optparse-applicative >= 0.10
                     , monad-logger
                     , fast-logger
                     , yaml
                     , aeson
                     , bytestring
                     , mime-types
                     , text
                     , containers
                     , conduit
                     , filepath
                     , directory
                     , process
                     , semigroups

  default-extensions:  NoImplicitPrelude
                       CPP
                       OverloadedStrings
                       TemplateHaskell

  ghc-options:         -Wall

test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             test.hs
  ghc-options:         -Wall
  build-depends:       base
                     , weixin-mp-sdk
                     , classy-prelude
                     , bytestring
                     , cryptocipher
                     , base64-bytestring
                     , data-default
                     , xml-conduit
                     , text
                     , aeson
                     , yesod-helpers
                     , base16-bytestring

  if flag(parsec3)
      build-depends:   parsec3
  else
      build-depends:   parsec == 3.*

  default-language:    Haskell2010

  default-extensions:  NoImplicitPrelude
                       DeriveDataTypeable
                       OverloadedStrings
                       QuasiQuotes
                       TemplateHaskell
                       TypeFamilies
                       FlexibleInstances
                       MultiParamTypeClasses
